<%- include('partials/header2'); %>

<body>
    <div class="h-100 d-flex justify-content-center align-items-center bg-dark">
        <div class="login-box p-5 text-center border">
    <div class="login-form">
        <form action="/login" method="post">
            <h2 class="text-center">Bigchat Log in</h2>
            <div class="form-group">
                <input type="text" name="email" class="form-control" placeholder="Username">
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="Password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>

            </div>

            <% if (locals.errors && locals.errors.login) { %>
            <% locals.errors.login.forEach(function(error) { %>
            <p class="alert alert-primary" role="alert"><%= error %></p>
            <% }) %>
            <% } %>
            <div class="clearfix">
                <label class="float-left form-check-label"><input type="checkbox"> Remember me</label>
                <a href="#" class="float-right">Forgot Password?</a>
            </div>
            <br>
            <div class="back button">
                <input type="button" value="back" onclick="history.go(-1)">
            </div>
        </form>
        <p class="text-center"><a href="/register">Create an Account</a></p>
    </div>

        </div></div>

</body>
<%- include('partials/footer'); %>